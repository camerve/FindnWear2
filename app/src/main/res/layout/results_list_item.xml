<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="20dp">
    <TableRow>
        <ImageButton android:id="@+id/resim1"
            android:background="@drawable/com_facebook_profile_picture_blank_portrait"
            android:layout_width="0px"
            android:layout_height="100dp"
            android:layout_weight="0.5"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="10px" />
        <ImageButton android:id="@+id/resim2"
            android:background="@drawable/com_facebook_profile_picture_blank_portrait"
            android:layout_width="0px"
            android:layout_weight="0.5"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="10px"
            android:layout_marginLeft="20dp"/>
    </TableRow>
    <TableRow>
        <TextView android:text="Resim 1"
            android:id="@+id/price1"
            android:layout_width="0px"
            android:textAlignment="center"
            android:layout_weight="0.5"
            android:textSize="20dp"/>
        <TextView android:text="Resim  2 "
            android:id="@+id/price2"
            android:layout_width="0px"
            android:textAlignment="center"
            android:layout_weight="0.5"
            android:textSize="20dp"/>
    </TableRow>

    <TableRow>
        <TextView android:text="Resim 1"
            android:id="@+id/brand1"
            android:layout_width="0px"
            android:textAlignment="center"
            android:layout_weight="0.5"
            android:textSize="12dp"/>
        <TextView android:text="Resim  2 "
            android:id="@+id/brand2"
            android:layout_width="0px"
            android:textAlignment="center"
            android:layout_weight="0.5"
            android:textSize="12dp"/>
    </TableRow>
</TableLayout>
