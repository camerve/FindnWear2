<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.beytepe.rezervix.IsyeriAnasayfa">
    <TableRow>
        <ImageButton android:id="@+id/resim1"
            android:background="@drawable/com_facebook_profile_picture_blank_portrait"
            android:layout_width="0px"
            android:layout_height="80dp"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="10px"/>
        <ImageButton android:id="@+id/resim2"
            android:background="@drawable/com_facebook_profile_picture_blank_portrait"
            android:layout_width="0px"
            android:layout_weight="0.2"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="10px"/>
        <ImageButton
            android:id="@+id/resim3"
            android:background="@drawable/com_facebook_profile_picture_blank_portrait"
            android:layout_width="0px"
            android:layout_height="80dp"
            android:layout_weight="0.2"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="fitCenter"
            />
    </TableRow>
    <TableRow>
        <TextView android:text="Resim 1"
            android:id="@+id/aciklama1"
            android:layout_width="0px"
            android:textAlignment="center"
            android:layout_weight="0.2"
            android:textSize="10dp"/>
        <TextView android:text="Resim  2 "
            android:id="@+id/aciklama2"
            android:layout_width="0px"
            android:textAlignment="center"
            android:layout_weight="0.2"
            android:textSize="10dp"/>
        <TextView android:text="Resim  3 "
            android:id="@+id/aciklama3"
            android:layout_width="0px"
            android:textAlignment="center"
            android:layout_weight="0.2"
            android:textSize="10dp"/>
    </TableRow>

</TableLayout>